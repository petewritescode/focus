{
    "name": "Focus",
    "description": "Block distracting sites, stay focused and get more done",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [ "<all_urls>" ],
        "js": [ "content.js" ],
        "run_at": "document_end"
    }],
    "web_accessible_resources": [ "content.html" ]
}